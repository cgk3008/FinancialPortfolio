@model IEnumerable<FinancialPortal.Models.Transaction>

@{
	ViewBag.Title = "Index";
}

<html>
<body>


	<div class="right_col" role="main">
		<div class="">

			@*<div class="clearfix"></div>*@
			<div class="row">
				<div class="col-md-12 col-sm-12 col-xs-12">
					<div class="x_panel">
						<div class="x_title">
							<h1>Index of Transactions <small></small></h1>
							<div class="x_content">

							</div>
							@*<div class="clearfix"></div>*@
						</div>
						<div class="x_content">
							<p class="text-muted font-13 m-b-30">

							</p>

							<p>
								@Html.ActionLink("Create New", "Create")
							</p>
							<table id="table_Transactions" class="table">
								<thead>
									<tr>
										<th>
											@Html.DisplayNameFor(model => model.Category.Name)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.AccountId)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.Description)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.Date)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.Amount)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.Type)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.EnteredById)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.Reconciled)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.ReconciledAmount)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.Void)
										</th>
										<th>
											@Html.DisplayNameFor(model => model.IsDeleted)
										</th>
										<th></th>
									</tr>
								</thead>
								<tbody>

									@foreach (var item in Model)
									{
										<tr>
											<td>
												@Html.DisplayFor(modelItem => item.Category.Name)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.AccountId)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Description)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Date)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Amount)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Type)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.EnteredById)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Reconciled)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.ReconciledAmount)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Void)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.IsDeleted)
											</td>
											<td>
												@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
												@Html.ActionLink("Details", "Details", new { id = item.Id }) |
												@Html.ActionLink("Delete", "Delete", new { id = item.Id })
											</td>
										</tr>
									}
								</tbody>

							</table>


							<script>
								$('#table_Transactions').DataTable();
							</script>





							@section Scripts {
								@Scripts.Render("~/bundles/jqueryval")
								$(function(){
								$().DataTable();
								});




							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>



	@section Scripts {
		@Scripts.Render("~/bundles/jqueryval")
	}
</body>
</html>
